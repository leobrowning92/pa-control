"""
Tkinter app for running the pa download, cleandata and PAplot scripts
from a simple GUI
"""

from Tkinter import Tk, Text, BOTH, W, N, E, S, RAISED
from ttk import Frame, Button, Label, Style, Entry


class PAGUI(Frame):

    def __init__(self, parent):
        Frame.__init__(self, parent)
        self.parent = parent
        self.initUI()

    def initUI(self):
        self.parent.title("Parameter Analyzer Control")
        self.style = Style()
        self.style.theme_use("default")
        self.pack(fill=BOTH, expand=True)

        self.columnconfigure(1, weight=1)
        self.columnconfigure(3, pad=7)
        self.rowconfigure(3, weight=1)
        self.rowconfigure(5, pad=7)



        lbl1 = Label(self, text="Dummy label at the top of the widget",
                     justify="center")
        lbl1.grid(column=1, sticky=W, pady=4, padx=5)

        lbl2 = Label(self, text="~/dummy/path/to/filename.csv",
                     justify="center", font="arial 11 italic")
        lbl2.grid(column=1, row=3, columnspan=2,
                  sticky=N + E + W, pady=4, padx=5)

        entry1 = Entry(self)
        entry1.grid(row=1, column=1, columnspan=2,
                    padx=5, sticky=E + W)

        entry2 = Entry(self)
        entry2.grid(row=2, column=1, columnspan=2,
                    padx=5, sticky=E + W)

        abtn = Button(self, text="Directory")
        abtn.grid(row=1, column=0)

        cbtn = Button(self, text="Filename")
        cbtn.grid(row=2, column=0)

        hbtn = Button(self, text="Exit")
        hbtn.grid(row=5, column=0, padx=5)

        obtn = Button(self, text="Run")
        obtn.grid(row=5, column=3)


def main():
    root = Tk()
    root.geometry("500x200+300+300")
    app = PAGUI(root)
    root.mainloop()

if __name__ == '__main__':
    main()
